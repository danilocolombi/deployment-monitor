{
  "manifestVersion": 1,
  "id": "deployment-monitor",
  "publisher": "danilocolombi",
  "version": "0.1.2",
  "name": "Deployment Monitor Widget",
  "description": "This extension adds a widget to your Dashboard that shows how often and how many times your application is deployed to each environment.",
  "public": true,
  "categories": ["Azure Pipelines"],
  "tags": ["Deployment", "Pipelines", "Environments"],
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services"
    }
  ],
  "icons": {
    "default": "logo.png"
  },
  "content": {
    "details": {
      "path": "README.md"
    },
    "license": {
      "path": "LICENSE"
    }
  },
  "repository": {
    "type": "git",
    "uri": "https://github.com/danilocolombi/deployment-monitor"
  },
  "files": [
    {
      "path": "static",
      "addressable": true
    },
    {
      "path": "dist",
      "addressable": true
    }
  ]
}
